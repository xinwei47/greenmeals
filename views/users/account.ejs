<% layout('layouts/boilerplate') %>

<div class="account">
    <!-- favorite recipes list -->
    <section class="account__section account__favorite">
        <h1 class="account__section-title heading--1">Your Favorite Recipes</h1>

        <div class="account__favorite-container">
            <% userFavoriteRecipes.forEach((favRecipe, ind) => { %>
            <div class="fav-card">
                <!-- insert fav button -->
                <div class="fav-card__fav-box">
                    <%- include('../partials/unfavform', {id: favRecipe.id, ind}) %>
                </div>
                <!-- insert fav button ends-->
                <a href="/recipes/<%= favRecipe.recipeId %>" class="fav-card__link">
                    <div class="fav-card__img-container">
                        <img src="<%= favRecipe.image %>" alt="" class="fav-card__img">
                    </div>
                    <h2 class="fav-card__recipe-title heading--2"><%= favRecipe.title %></h2>
                </a>
            </div>
            <% }) %>
        </div>

    </section>

    <section class="account__section account__user-profile"></section>


</div>